<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BlogE" parent="Theme.Material3.Dark">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/secondaryLightColor</item>
        <item name="colorOnPrimaryContainer">@color/secondaryDarkColor</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primaryColor</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorSecondaryContainer">@color/primaryLightColor</item>
        <item name="colorOnSecondaryContainer">@color/primaryDarkColor</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/primaryDarkColor</item>
    </style>
</resources>